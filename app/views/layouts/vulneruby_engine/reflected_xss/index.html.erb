<div>
  <h1>Reflected XSS</h1>
  <form action=<%= reflected_xss_path %> method="post">
    <div class="field has-addons">
      <div class="control">
        <input class="input" type="text" name="data" placeholder="ENV">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="control">
        <button class="button is-info" action="submit">
          Submit
        </button>
      </div>
    </div>
  </form>
</div>