<div>
  <h1>Unsafe File Upload</h1>
  <%= form_tag unsafe_file_upload_path, multipart: true do%>
    <div class="field has-addons">
      <div class="control">
        <input class="input" type="file" name="data" placeholder="">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="control">
        <button class="button is-info" action="submit">
          Upload File
        </button>
      </div>
    </div>
  <% end %>
</div>