<div>
  <h1>Regex Dos</h1>
  <form action=<%= regex_dos_path %> method="post">
    <div class="field has-addons">
      <div class="control">
        <input class="input" type="text" name="data" placeholder="arbitrary regexp operand">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="control">
        <button class="button is-info" action="submit">
          Run
        </button>
      </div>
    </div>
  </form>
</div>