<div>
  <h1>SSRF Injection</h1>
  <form action=<%= ssrf_path %> method="post">
    <div class="field has-addons">
      <div class="control">
        <input class="input" type="text" name="uri" placeholder="http://localhost:3000">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="control">
        <button class="button is-info" action="submit">
          Get
        </button>
      </div>
    </div>
  </form>
</div>