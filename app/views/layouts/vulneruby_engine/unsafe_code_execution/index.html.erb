<div>
  <h1>Unsafe Code Execution</h1>
  <form action=<%= unsafe_code_execution_path %> method="post">
    <div class="field has-addons">
      <div class="control">
        <input class="input" type="text" name="data" placeholder="2+2">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="control">
        <button class="button is-info" action="submit">
          Eval code
        </button>
      </div>
    </div>
  </form>
</div>