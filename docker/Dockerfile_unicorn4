FROM ruby:2.7
ARG PORT_ARG=3010

RUN apt-get update && apt-get install -y build-essential

WORKDIR app

COPY agent/* agent/
COPY Gemfile .
COPY Gemfile.lock .
COPY vulneruby_engine.gemspec .
COPY lib/vulneruby_engine/version.rb ./lib/vulneruby_engine/version.rb

# Used in CI to install gem dropped in ./agent/ directory
RUN gem install ./agent/contrast-agent.gem --platform ruby -N

RUN bundle install --with unicorn_4

ENV CI_TEST=true

COPY . .
RUN rm **/*.log | true

# this is used by the volume in docker-compose
RUN mkdir -p /tmp/unicorn4/messages
ENV CONTRAST__AGENT__LOGGER__PATH=/tmp/unicorn4/agent.log
ENV CONTRAST__AGENT__SERVICE__LOGGER__PATH=/tmp/unicorn4/service.log

timestamp=$(date +%s)
APP_NAME="RailsEngine-Unicorn4-${timestamp}"
RUN echo "Application name in teamserver: ${APP_NAME}"
ENV CONTRAST_APPLICATION__NAME=$APP_NAME

RUN bundle exec rails db:migrate

ENV UNICORN_4_TEST=true
ENV PORT=$PORT_ARG

CMD bundle exec unicorn -p $PORT -c ./spec/dummy/config/unicorn.rb ./spec/dummy/config.ru